<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_close_create"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/back" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_close_create"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="创建账户"
        android:textColor="@color/AppColor"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="我是:"
        android:textSize="12dp"
        android:textColor="#000"
        android:id="@+id/tv_choose"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:id="@+id/rl_choose_register"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/tv_choose"
        android:background="@drawable/shape_choose_bg">
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/bt_user_register"
            android:text="普通用户"
            android:textSize="12dp"
            android:background="@drawable/shape_pay"
            android:textColor="#fff" />
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/bt_admin_register"
            android:text="商户"
            android:textSize="12dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/shape_alpha_card"
            android:textColor="#fff"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_choose_register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="用户名(个人信息展示)："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_count_down"
        android:hint="请输入用户名(长度小于20个字符)"
        android:inputType="text"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="手机号(登录账号)："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_count_down"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textSize="12dp" />

    <!--<TextView
        android:id="@+id/tv_request_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="验证码"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_request_code"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/tv_request_code"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_count_down"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_request_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/et_request_code"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/et_request_code"
        android:layout_toRightOf="@id/et_request_code"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="12dp"
        android:background="@drawable/shape_pay"/>-->
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="密码："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_count_down"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="12dp" />

    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et_password"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/cb_agree"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/cb_agree"
        android:text="您接受并同意遵守我们的条款与条件、隐私政策、以及个人敏感信息政策。"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_create"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cb_agree"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_pay"
        android:text="创建账户"
        android:textColor="#fff"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_alpha_card"
        android:text="已创建账户？"
        android:textColor="#fff"
        android:textSize="12dp" />
</RelativeLayout>
