<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/AppColor">

        <ImageView
            android:id="@+id/iv_close_shop_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back_alpha"/>

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/iv_close_shop_detail"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/contact"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:layout_toRightOf="@id/iv_shop"/>

    </RelativeLayout>

</RelativeLayout>