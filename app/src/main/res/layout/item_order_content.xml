<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/shape_white_card">

    <ImageView
        android:id="@+id/iv_shopping_cart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/photo_default" />

    <TextView
        android:id="@+id/tv_shopping_cart_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shopping_cart"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="XXXXXXXX"
        android:textColor="#000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/tv_shopping_cart_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shopping_cart"
        android:text="sdkjsdkljlksdjflsk"
        android:textColor="@color/line"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/iv_shopping_cart"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shopping_cart"
        android:text="￥"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/iv_shopping_cart"
        android:layout_toRightOf="@id/tv_unit"
        android:text="8888"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/iv_shopping_cart"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_count_down"
        android:gravity="center"
        android:text="1"
        android:textColor="#000"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_count"
        android:layout_toLeftOf="@id/tv_count"
        android:gravity="center"
        android:text="商品数量："
        android:textColor="@color/AppColor"
        android:textSize="12dp" />

</RelativeLayout>