<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/shape_white_card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tv_size_name"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/line"
        android:text="尺码名称：" />
    <EditText
        android:id="@+id/et_size_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_admin_edittext"
        android:hint="请输入尺码名称"
        android:textSize="15dp"
        android:layout_alignBottom="@id/tv_size_name"
        android:layout_alignTop="@id/tv_size_name"
        android:layout_toRightOf="@id/tv_size_name"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tv_size_count"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/line"
        android:layout_below="@id/tv_size_name"
        android:layout_marginTop="20dp"
        android:text="库存数量：" />
    <EditText
        android:id="@+id/et_size_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_admin_edittext"
        android:hint="请输入库存数量"
        android:textSize="15dp"
        android:layout_alignBottom="@id/tv_size_count"
        android:layout_alignTop="@id/tv_size_count"
        android:layout_toRightOf="@id/tv_size_count"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:singleLine="true"/>

</RelativeLayout>